# Database (PostgreSQL - use Neon, Supabase, or local)
DATABASE_URL="postgresql://user:password@localhost:5432/composter"

# Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-at-least-32-characters"

# Environment
NODE_ENV="development"

# Server
PORT=3000

# Resend API Key (for sending emails)
RESEND_API_KEY=replace_with_your_resend_api_key

# From email. Will only work with verified domains/emails on Resend
FROM_EMAIL="" # e.g., no-reply@composter.com. You can leave this empty during development.

# URLs
# For LOCAL development:
BETTER_AUTH_URL="http://localhost:3000"
CLIENT_URL="http://localhost:5173"

# For PRODUCTION (Vercel):
# BETTER_AUTH_URL="https://composter.vercel.app"
# CLIENT_URL="https://composter.vercel.app"
